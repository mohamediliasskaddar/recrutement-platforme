{% extends 'base.html.twig' %}

{% block title %}Notifications - Admin Dashboard{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/admin_sidebar.css') }}">
    <link rel="stylesheet" href="{{ asset('css/admin_notifications.css') }}">
{% endblock %}
{% block body %}
    <div class="admin-dashboard-container">
        {% include 'admindashboard/admin_sidebar.html.twig' with {'active': 'notifications'} %}
        <main class="admin-main-content">
            <h1 class="page-title">Liste des Notifications</h1>
            <div class="notifications-container">
                {% if notifications is empty %}
                    <p class="no-notifications">Aucune notification Ã  afficher.</p>
                {% else %}
                    <ul class="notifications-list">
                        {% for notification in notifications %}
                            <li class="notification-item">
                                <div class="notification-content">
                                    <p class="notification-message">{{ notification.message }}</p>
                                    <div class="notification-details">
                                        <span class="notification-date">{{ notification.createdAt|date('d/m/Y H:i') }}</span>
                                    </div>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>
        </main>
    </div>
{% endblock %}