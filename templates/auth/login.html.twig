{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="/css/login.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="login-container">
        <div class="login-card">
            <h1>Connexion</h1>
            {% block flash_messages %}
                <div class="login-flash-messages">
                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                                {{ message }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endfor %}
                    {% endfor %}
                </div>
            {% endblock %}

            <form method="post" action="{{ path('app_login') }}" class="login-form">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" name="email" id="email" required class="form-control">
                </div>
                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <input type="password" name="password" id="password" required class="form-control">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Se connecter</button>
                </div>
            </form>
            <div class="login-divider">
                <span>ou</span>
            </div>
            <div class="registration-links">
                <a href="{{ inscription_candidat_url }}" class="btn btn-outline">Inscription Candidat</a>
                <a href="{{ inscription_entreprise_url }}" class="btn btn-outline">Inscription Entreprise</a>
            </div>
        </div>
    </div>
{% endblock %}