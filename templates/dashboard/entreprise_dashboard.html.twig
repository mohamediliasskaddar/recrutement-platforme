{% extends 'base.html.twig' %}

{% block title %}Dashboard Entreprise{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/sidebar.css') }}">
    <link rel="stylesheet" href="{{ asset('css/entreprise_dashboard.css') }}">
{% endblock %}

{% block body %}
    <div class="dashboard-container">
        {% include 'dashboard/sidebar.html.twig' with {'active': 'dashboard'} %}

        <div class="dashboard-content-wrapper">
            <main class="dashboard-main">
                <div class="dashboard-header">
                    <h1> Bienvenue, {{ entreprise.nomEntreprise }}:</h1>
                </div>

                <div class="dashboard-content">
                    <div class="welcome-card">
                        <h2>Votre espace entreprise</h2>
                        <p>Bienvenue sur votre tableau de bord. Ici, vous pouvez :</p>
                        <ul>
                            <li>Gérer vos offres d'emploi</li>
                            <li>Consulter les candidatures reçues</li>
                            <li>Mettre à jour votre profil d'entreprise</li>
                            <li>Accéder à vos notifications importantes</li>
                        </ul>
                        <p>Utilisez le menu de navigation pour explorer toutes les fonctionnalités à votre disposition.</p>
                    </div>
                    <div class="quick-stats">
                        <div class="stat-card">
                            <h3>Offres actives</h3>
                            <p class="stat-number">5</p>
                        </div>
                        <div class="stat-card">
                            <h3>Candidatures reçues</h3>
                            <p class="stat-number">12</p>
                        </div>
                        <div class="stat-card">
                            <h3>Nouvelles notifications</h3>
                            <p class="stat-number">3</p>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
{% endblock %}

